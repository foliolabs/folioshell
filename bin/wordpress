$autoload = __DIR__.'/../vendor/autoload.php';
if(is_file($autoload)) {
    require $autoload;
} else {
   require __DIR__.'/../../../../vendor/autoload.php';
}

use Symfony\Component\Console\Application;

$application = new Application('WordPress Console Tools', '1.0');

$application->add(new Nooku\Console\Command\Symlink());
$application->add(new Nooku\Console\Command\SiteCreate());
$application->add(new Nooku\Console\Command\SiteDelete());
$application->add(new Nooku\Console\Command\PluginSymlink());
$application->add(new Nooku\Console\Command\PluginInstall());
$application->add(new Nooku\Console\Command\PluginInstallFile());
$application->add(new Nooku\Console\Command\Versions());

$application->run();
